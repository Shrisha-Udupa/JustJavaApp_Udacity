        <!--android:textSize="16sp" />-->


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="submitOrder"
        android:text="Order"
        android:textAllCaps="true" />

</LinearLayout>

</ScrollView>
